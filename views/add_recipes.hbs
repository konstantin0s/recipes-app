      </ul>
    </div>
  </nav>


  <h1>Add a new Recipe</h1>
  <form method="POST" action="/recipes/add" class="form">
    <div id="form-group">
      <label for="level">Name:</label>
      <input type="text" name="title" class="form-control">
    </div>
    <div id="form-group">
      <label for="level">Level:</label>
      <input type="text" name="level" class="form-control">
    </div>
    <div id="form-group">
      <label for="ingredients">Ingredients:</label>
      <textarea name="ingredients" id="" cols="30" rows="10" class="form-control"></textarea>
      <div id="form-group">
        <label for="level">Cuisine:</label>
        <input type="text" name="cuisine" class="form-control">
      </div>
      <div id="form-group">
        <label for="level">Dish:</label>
        <input type="text" name="dishType" class="form-control">
      </div>
      <div id="form-group">
        <label for="level">Image:</label>
        <input type='text' name='image' placeholder="Image url" />
      </div>
      <div id="form-group">
        <label for="level">Duration:</label>
        <input type="text" name="duration" class="form-control">
      </div>
      <div id="form-group">
        <label for="level">Cook:</label>
        <input type="text" name="creator" class="form-control">
      </div>
      <div id="form-group">
        <label for="level">Date:</label>
        <input type="date" name="date" class="form-control">
      </div>
      <input type="submit" class="btn btn-primary" value="Submit">
    </div>
  </form>

