  <h3 class="add-title text-center">Add a new Recipe</h3>
  <form method="POST" enctype="multipart/form-data" action="/recipes/add" class="form">
    <div id="form-group">
      <label for="level"></label>
      <input type="text" name="title" placeholder="Recipe Name" 
      class="form-control">
    </div>
    <div id="form-group">
      <label for="level"></label>
      <input type="text" name="level" placeholder="Level"  class="form-control">
    </div>
    <div id="form-group">
      <label for="ingredients"></label>
      <textarea name="ingredients" id="" cols="30" rows="10" placeholder="Ingredients" 
       class="form-control"></textarea>
      <div id="form-group">
        <label for="level"></label>
        <input type="text" name="cuisine" placeholder="Cuisine Type" class="form-control">
      </div>
      <div id="form-group">
        <label for="level"></label>
        <input type="text" name="dishType" placeholder="Dish Type"  class="form-control">
      </div>
            <div id="form-group">
        <label for="directions"></label>
 <textarea name="directions" id="" cols="30" rows="10" placeholder="Directions" 
       class="form-control"></textarea>
      </div>
    <div id="form-group" class="image inner-addon left-addon">
      <div class="upload-btn-wrapper">
        <button class="upload">Upload a file</button>
        <input type="file" name='image' id="addPic" className="btn btn-warning addPic form-control" />
      </div>
    </div>
      <div id="form-group">
        <label for="level"></label>
        <input type="text" name="duration" placeholder="Duration"  class="form-control">
      </div>
      <div id="form-group">
        <label for="level"></label>
        <input type="text" name="creator" placeholder="Chef Name"  class="form-control">
      </div>
      <div id="form-group">
        <label for="level"></label>
        <input type="text" placeholder="ex. 01/06/1985" id="cal" name="date" class="form-control">
      </div>
      <input type="submit" class="btn btn-primary" value="Submit">
    </div>
  </form>


