<div class="container">

  <div id="progress"></div>

  <div class="cards">


  <h4 class="edit-title text-center">Edit Recipe</h4>
  
<form method="POST" enctype="multipart/form-data" action="/recipe/edit/{{recip.id}}" class="form">
<div id="form-group">
  <label for="level"></label>
  <input type="text" name="title" value="{{recip.title}}" placeholder="Recipe Name" class="form-control">
</div>
<div id="form-group">
  <label for="level"></label>
  <input type="text" name="level" placeholder="Enter Level"  value={{recip.level}} class="form-control">
</div>
<div id="form-group">
  <label for="ingredients"></label>
 <textarea name="ingredients" value={{recip.ingredients}}  placeholder="Add ingredients"
 cols="30" rows="10" class="form-control"></textarea>
 <div id="form-group">
  <label for="level"></label>
  <input type="text" name="cuisine" placeholder={{recip.cuisine}} value={{recip.cuisine}} class="form-control">
</div>
<div id="form-group">
  <label for="level"></label>
  <input type="text" name="dishType" placeholder={{recip.dishType}} value={{recip.dishType}} class="form-control">
</div>
        <div id="form-group">
        <label for="level"></label>
 <textarea name="directions"  value={{recip.directions}} 
 cols="30" rows="10" class="form-control"></textarea>
      </div>
  <div id="form-group" class="image inner-addon left-addon">
    <div class="upload-btn-wrapper">
      <button class="upload">Upload a file</button>
      <input type="file" name='image' id="addPic" className="btn btn-warning addPic form-control" />
    </div>
  </div>
<div id="form-group">
  <label for="level"></label>
  <input type="text" name="duration" placeholder={{recip.duration}}  value={{recip.duration}} class="form-control">
</div>
<div id="form-group">
  <label for="level"></label>
  <input type="text" name="creator" placeholder={{recip.creator}}  value={{recip.creator}} class="form-control">
</div>
    <div id="form-group">
      <label for="level"></label>
      <input type="text" placeholder="ex. 01/06/1985" id="cal" name="date" class="form-control">
    </div>
 <input type="submit" class="btn btn-primary" value="Update">
</div>
</form>

